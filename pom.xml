<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>me.FurH</groupId>
    <artifactId>CreativeControl</artifactId>
    <version>5.6-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>CreativeControl</name>
    <url>http://dev.bukkit.org/server-mods/creativecontrol/</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>releases</id>
            <url>http://localhost:8081/nexus/content/repositories/releases</url>
        </repository>
        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.anjocaido.groupmanager</groupId>
            <artifactId>GroupManager</artifactId>
            <version>2.10.1</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/EssentialsGroupManager.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>me.botsko</groupId>
            <artifactId>Prism</artifactId>
            <version>1.5.8</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/Prism.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>ru.tehkode</groupId>
            <artifactId>PermissionsEx</artifactId>
            <version>1.19.5</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/PermissionsEx.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.skitscape</groupId>
            <artifactId>survivalgames</artifactId>
            <version>0.5.0</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/SurvivalGames.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.2.23</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/Vault.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.diddiz.LogBlock</groupId>
            <artifactId>LogBlock</artifactId>
            <version>1.70</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/LogBlock.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sk89q.worldedit</groupId>
            <artifactId>WorldEdit</artifactId>
            <version>5.5.5</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/WorldEdit.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>uk.org.whoami.authme</groupId>
            <artifactId>AuthMe</artifactId>
            <version>2.6.6</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/AuthMe.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.cypherx.xauth</groupId>
            <artifactId>xAuth</artifactId>
            <version>2.0.20</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/xAuth.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.garbagemule.MobArena</groupId>
            <artifactId>MobArena</artifactId>
            <version>0.94.4.91</version>
            <scope>system</scope>
            <systemPath>D:/Java/lib/mobArena.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.5.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>craftbukkit</artifactId>
            <version>1.5.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>me.FurH</groupId>
            <artifactId>FCoreLib</artifactId>
            <version>0.2.22</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/java/</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>me/FurH/**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <defaultGoal>clean install</defaultGoal>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathLayoutType>custom</classpathLayoutType>
                            <customClasspathLayout>../lib/h2.jar</customClasspathLayout>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${artifactId}</finalName>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>